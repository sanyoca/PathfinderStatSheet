<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="background">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="buttons">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">@dimen/splash_button_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/pf_font_color</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:background">@color/pf_font_bg</item>
    </style>

    <style name="splash_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingTop">@dimen/splash_button_start</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="loadtitle">
        <item name="android:paddingTop">@dimen/splash_button_start</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@color/pf_font_color</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="spinnerstyle">
        <item name="android:paddingLeft">@dimen/spinner_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/spinner_horizontal_padding</item>
        <item name="android:paddingTop">@dimen/spinner_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/spinner_vertical_padding</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:textColor">@color/pf_font_color</item>
        <item name="android:background">@color/pf_font_bg</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="spinner_load_style">
        <item name="android:textColor">@color/pf_font_color</item>
        <item name="android:background">@color/pf_font_bg</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_width">@dimen/spinner_width</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
