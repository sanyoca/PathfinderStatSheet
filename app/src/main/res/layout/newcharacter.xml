<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sanya.pathfinderstatsheet.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/splash_bg"
        android:scaleType="centerCrop"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/tabs"
        app:tabTextColor="@color/pf_font_color"
        app:tabSelectedTextColor="@color/pf_font_color"
        app:tabTextAppearance="@style/TextAppearance.AppCompat.Small.Inverse"
        app:tabBackground="@color/pf_font_bg"
        app:tabIndicatorColor="@color/pf_font_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_below="@id/tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>