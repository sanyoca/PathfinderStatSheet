<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin"
    tools:context="com.example.sanya.pathfinderstatsheet.Basicdatas">

    <TextView
        style="@style/labels"
        android:id="@+id/text_charname"
        android:text="@string/charname" />

    <EditText
        android:id="@+id/edit_charname"
        style="@style/editfield" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_charrace"
                style="@style/labels"
                android:text="@string/charrace" />

            <Spinner
                android:id="@+id/spinner_charrace"
                style="@style/spinner_style" />

            <TextView
                style="@style/labels"
                android:id="@+id/text_charclass"
                android:text="@string/charclass" />

            <Spinner
                android:id="@+id/spinner_charclass"
                style="@style/spinner_style" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_charpic"
                android:background="@color/pf_font_color"
                android:adjustViewBounds="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:src="@drawable/headoutline"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
